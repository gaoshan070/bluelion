<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bluelion.usercenter.mapper.IUserMapper">

    <select id="login" resultType="com.bluelion.usercenter.entity.User">
		select * from user where username = #{param1} and password = #{param2}
	</select>

	<insert id="addUser" parameterType="java.util.Map">
        <![CDATA[
          INSERT INTO user
          (username,password,nickname,email,salt,status,registedate, lastlogintime)
          VALUE(#{userName},#{password},#{nickName},#{email},#{salt},1,UNIX_TIMESTAMP(),UNIX_TIMESTAMP())
        ]]>
    </insert>
</mapper>